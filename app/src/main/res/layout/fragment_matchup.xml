<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/activity_vertical_margin"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    tools:context="com.rogiers.jeffrey.codestar.MatchupFragment">

    <EditText
        android:id="@+id/text_user_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="@string/first_github_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/versus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/versus"
        app:layout_constraintTop_toBottomOf="@id/text_user_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/text_user_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="@string/second_github_user"
        app:layout_constraintTop_toBottomOf="@id/versus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/button_compare_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_compare_users"
        app:layout_constraintTop_toBottomOf="@id/text_user_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
